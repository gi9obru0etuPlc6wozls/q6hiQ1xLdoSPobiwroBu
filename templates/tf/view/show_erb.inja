<!DOCTYPE html>
<%#include "{{ lCamel( create_table ) }}.h" %>
<% tfetch({{ uCamel( create_table ) }}, {{ lCamel( create_table ) }}); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Showing {{ uSpace( create_table ) }}</h1>
## for column in columns
<dt>{{ uSpace( column/name ) }}</dt><dd><%= {{ lCamel( create_table ) }}.{{ lCamel( column/name ) }}() %></dd><br />
## endfor

<%== linkTo("Edit", urla("save", {{ lCamel( create_table ) }}.{{ include_file("pk_get_name.inja") }}())) %> |
<%== linkTo("Back", urla("index")) %>

</body>
</html>
