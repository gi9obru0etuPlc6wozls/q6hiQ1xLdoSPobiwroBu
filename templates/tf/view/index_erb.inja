<!DOCTYPE html>
<%#include "{{ lower( lCamel( create_table )) }}.h" %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>

<h1>Listing {{ uSpace( create_table ) }}</h1>

<%== linkTo("Create a new {{ uSpace( create_table ) }}", urla("create")) %><br />
<br />
<table border="1" cellpadding="5" style="border: 1px #d0d0d0 solid; border-collapse: collapse;">
  <tr>
## for column in columns
## if not mapCompare("exclude", column/name, true)
    <th>{{ uSpace(column/name) }}</th>
## endif
## endfor
  </tr>
<% tfetch(QList<{{ uCamel( create_table ) }}>, {{ lCamel( create_table ) }}List); %>
<% for (const auto &i : {{ lCamel( create_table ) }}List) { %>
  <tr>
## for column in columns
## if not mapCompare("exclude", column/name, true)
    <td><%= i.{{ lCamel(column/name) }}() %></td>
## endif
## endfor
    <td>
      <%== linkTo("Show", urla("show", i.{{ include_file("pk_get_name.inja") }}())) %>
      <%== linkTo("Edit", urla("save", i.{{ include_file("pk_get_name.inja") }}())) %>
      <%== linkTo("Remove", urla("remove", i.{{ include_file("pk_get_name.inja") }}()), Tf::Post, "confirm('Are you sure?')") %>
    </td>
  </tr>
<% } %>
</table>

</body>
</html>
